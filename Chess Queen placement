#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t; cin>>t;
	while(t--)
	{
	int n; cin>>n;
	for(int i=1;i<=n;i++)
	{
	    for(int j=1;j<=n;j++)
	    {
	        if(n%2==0)
	        {
	            if(i+j==n+1&&i!=n-2&&i!=n)
	            {
	              cout<<"Q";  
	            }
	            else
	                cout<<".";
	        }
	        else
	        {
	            if(n%2)
	            {
	                if(i==j&&i!=1&&i!=n)
	                    cout<<"Q";
	               else
	                cout<<".";
	            }
	        }
	    }
	    cout<<"\n";
	}
	}
	return 0;
	
}
